
@model IEnumerable<ImageApp.BLL.Models.AllProductVM>


@if (@TempData["SuccessMsg"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["SuccessMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


@if (@TempData["ErrMsg"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @TempData["ErrMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div>

    <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-left" data-aos-">
        <img src="~/aunction3.jpg" class="img-rounded" alt="hey">     
    </div>

</div>

    @foreach (var item in Model.Select((value, i) => new { value, i }))
    {

        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">

                <span>@item.value.Id</span>
            <img src="~/img/portfolio/@item.value.ImageFile" class="img-rounded" alt="hey">
            <div>
                <span>@item.value.Name</span>
                <span>@item.value.Description</span>
            </div>
            </li>

        </ul>
    }

@section Scripts
    {
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
    ;
}

