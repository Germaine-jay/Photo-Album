@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@model ImageApp.BLL.Models.AddOrUpdatePictureVM;


<form class="col-7" asp-controller="Images" asp-action="Save" enctype="multipart/form-data">

    @if (@ViewBag.ErrMsg != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @ViewBag.ErrMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert-danger" asp-validation-summary="@ValidationSummary.All"></div>

    <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Name">
        <span asp-validation-for="@Model.Name" class="alert-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Description" class="form-label"></label>
        <textarea class="form-control" asp-for="@Model.Description"></textarea>
        <span asp-validation-for="@Model.Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ImageFile">Image</label>
        <input asp-for="@Model.ImageFile" type="file" class="form-control-file">
        <span asp-validation-for="@Model.ImageFile"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    
</form>

@section Scripts
    {
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
    ;
}
