﻿@using ImageApp.DAL.Entities;
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Tempo Bootstrap Template - Index</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <title>@ViewData["Title"] - ImageApp</title>

    <link href="~/vendor/aos/aos.css" rel="stylesheet" asp-append-version="true">
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/vendor/remixicon/remixicon.css" rel="stylesheet" asp-append-version="true">
    <link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />s
    <link rel="stylesheet" href="~/ImageApp.styles.css" asp-append-version="true" />
</head>
<body>

    <header id="header" class="fixed-top">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <h1 class="logo me-auto me-lg-0"><a href="index.html"></a>Pandora</h1>
            

            <nav id="navbar" class="navbar">
                <ul>
                     @if (User.Identity.IsAuthenticated)
                    {

                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
               
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="AllUsers">AllUsers</a></li>                          
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Images" asp-action="AllImages">Images</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="RegisterAdmin">RegisterAdmin</a></li>
                        }

                        <li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Profile">Profile</a></li>

                        @if (User.IsInRole("User"))
                        {
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="UpdateUser">Update</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Images" asp-action="NewImage">New Image</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Images" asp-action="Album">Album</a></li>
                        }
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="SignOut">logout</a></li>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="RegisterUser">Register</a></li>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="SignIn">Login</a></li>

                    }
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>

            <div class="header-social-links">
                <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></i></a>
            </div>

        </div>

    </header>
            @RenderBody()
    

    <script src="~/vendor/purecounter/purecounter_vanilla.js" asp-append-version="true"> </script>
    <script src="~/vendor/aos/aos.js" asp-append-version="true"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/vendor/glightbox/js/glightbox.min.js" asp-append-version="true"></script>
    <script src="~/vendor/isotope-layout/isotope.pkgd.min.js" asp-append-version="true"></script>
    <script src="~/vendor/swiper/swiper-bundle.min.js" asp-append-version="true"></script>
    <script src="~/vendor/php-email-form/validate.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js" asp-append-version="true"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/JavaScript.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
