@{
	ViewBag.Title = "title";
	Layout = "_Layout";
}

@using ImageApp.DAL.Enums
@model ImageApp.BLL.Models.ChangePasswordVM;

<section class="mt-4">
	@if (@TempData["SuccessMsg"] != null)
	{
		<div class="alert alert-success alert-dismissible fade show w-75 mx-auto d-block" role="alert">
			<strong>Success!</strong> @TempData["SuccessMsg"]
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	}


	@if (@TempData["ErrMsg"] != null)
	{
		<div class="alert alert-danger alert-dismissible fade show w-75 mx-auto d-block" role="alert">
			<strong>Error!</strong> @TempData["ErrMsg"]
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	}

	<div class="page-content">
		<div class="form-v5-content w">
			<form class="form-detail" id="myForm" asp-controller="User" asp-action="ChangeUserPassword">

				<div class="alert-danger" asp-validation-summary="@ValidationSummary.ModelOnly"></div>
				<h2>Change Password</h2>

				<div class="form-row">
					<label asp-for="@Model.UserId" class="form-label"></label>
					<input type="text" class="input-text w-50" style="align-items:center" asp-for="@Model.UserId" required />
					<span asp-validation-for="@Model.UserId" style="color: red;"></span>
				</div>

				<div class="form-row">
					<label asp-for="@Model.OldPassword" class="form-label"></label>
					<input type="text" class="input-text w-50" style="align-items:center" asp-for="@Model.OldPassword" required />
					<span asp-validation-for="@Model.OldPassword" style="color: red;"></span>
				</div>

				<div class="form-row">
					<label asp-for="@Model.NewPassword" class="form-label"></label>
					<input type="text" class="input-text w-50" style="align-items:center" asp-for="@Model.NewPassword" required />
					<span asp-validation-for="@Model.NewPassword" style="color: red;"></span>
				</div>

				<div class="form-row">
					<label asp-for="@Model.ConfirmNewPassword" class="form-label"></label>
					<input type="text" class="input-text w-50" style="align-items:center" asp-for="@Model.ConfirmNewPassword" required />
					<span asp-validation-for="@Model.ConfirmNewPassword" style="color: red;"></span>
				</div>


				<div class="form-row" style="color:green">
					<input type="submit" name="register" class="input-text w-50" value="Register">
				</div>
			</form>
		</div>
	</div>
</section>

@section Scripts
	{
	@{
		Html.RenderPartial("_ValidationScriptsPartial");
	}
    ;
}
