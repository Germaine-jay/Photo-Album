@{
	ViewBag.Title = "title";
	Layout = "_Layout";
}

@model ImageApp.BLL.Models.ForgotPasswordVM;

<section class="mt-4">
	@if (@TempData["SuccessMsg"] != null)
	{
		<div class="alert alert-success alert-dismissible fade show w-75 mx-auto d-block" role="alert">
			<strong>Success!</strong> @TempData["SuccessMsg"]
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	}


	@if (@TempData["ErrMsg"] != null)
	{
		<div class="alert alert-danger alert-dismissible fade show w-75 mx-auto d-block" role="alert">
			<strong>Error!</strong> @TempData["ErrMsg"]
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	}

	<div class="page-content">
		<div class="form-v5-content">
			<form class="form-detail" asp-controller="User" asp-action="UserForgotPassword">

				<div class="alert-danger" asp-validation-summary="@ValidationSummary.ModelOnly"></div>
				<h2>Sign In</h2>
				<div class="form-row">
					<label asp-for="@Model.Email" class="form-label"></label>
					<input type="text" class="input-text" asp-for="@Model.Email" required />
					<span asp-validation-for="@Model.Email"></span>
					<i class="fas fa-envelope p-2"></i>
				</div>

				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Send">
				</div>

				<div class="form-row-last">
					<p class="small mb-0">Remember Password? <a asp-controller="User" asp-action="SignIn">SignIn</a></p>
				</div>
			</form>
		</div>
	</div>
</section>

@section Scripts
	{
	@{
		Html.RenderPartial("_ValidationScriptsPartial");
	}
}
