@{
	ViewBag.Title = "title";
	Layout = "_Layout";
}


@model ImageApp.BLL.Models.ConfirmTokenVM;

<section class="mt-4">
	@if (@TempData["SuccessMsg"] != null)
	{
		<div class="alert alert-success alert-dismissible fade show w-75 mx-auto d-block" role="alert">
			<strong>Success!</strong> @TempData["SuccessMsg"]
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	}


	@if (@TempData["ErrMsg"] != null)
	{
		<div class="alert alert-danger alert-dismissible fade show w-75 mx-auto d-block" role="alert">
			<strong>Error!</strong> @TempData["ErrMsg"]
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	}

	<div class="page-content">
		<div class="form-v5-content">
			<form class="form-detail" id="myForm" asp-controller="User" asp-action="ConfirmUserToken">

				<div class="alert-danger" asp-validation-summary="@ValidationSummary.ModelOnly"></div>
				<h2>Verify Token</h2>

				<div class="form-row">
					<label asp-for="@Model.UserId" class="form-label"></label>
					<input type="text" class="input-text" style="align-items:center" asp-for="@Model.UserId" required />
					<span asp-validation-for="@Model.UserId" style="color: red;"></span>
				</div>

				<div class="form-row">
					<label asp-for="@Model.Token" class="form-label"></label>
					<input type="text" class="input-text" style="align-items:center" asp-for="@Model.Token" required />
					<span asp-validation-for="@Model.Token" style="color: red;"></span>
				</div>

				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Verify">
				</div>

			</form>
		</div>
	</div>
</section>

@section Scripts
	{
	@{
		Html.RenderPartial("_ValidationScriptsPartial");
	}
    ;
}
