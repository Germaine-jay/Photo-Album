@{
	ViewBag.Title = "title";
	Layout = "_Layout";
}

@model ImageApp.BLL.Models.ResetPasswordVM;

<section class="mt-4">
	@if (@TempData["SuccessMsg"] != null)
	{
		<div class="alert alert-success alert-dismissible fade show w-75 mx-auto d-block" role="alert">
			<strong>Success!</strong> @TempData["SuccessMsg"]
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	}


	@if (@TempData["ErrMsg"] != null)
	{
		<div class="alert alert-danger alert-dismissible fade show w-75 mx-auto d-block" role="alert">
			<strong>Error!</strong> @TempData["ErrMsg"]
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	}

	<div class="page-content">
		<div class="form-v5-content">
			<form class="form-detail" asp-controller="User" asp-action="ResetUserPassword">

				<div class="alert-danger" asp-validation-summary="@ValidationSummary.ModelOnly"></div>
				<h2>Change Password</h2>

				<div class="form-row">
					<input type="hidden" class="input-text" style="align-items:center" asp-for="@Model.UserId" required />
				</div>

				<div class="form-row">
					<input type="hidden" class="input-text" style="align-items:center" asp-for="@Model.Code" required />
				</div>

				<div class="form-row">
					<label asp-for="@Model.Password" class="form-label"></label>
					<input type="text" class="input-text" asp-for="@Model.Password" required />
					<span asp-validation-for="@Model.Password" style="color: red;"></span>
					<i class="fas fa-lock p-2" ></i>
				</div>

				<div class="form-row">
					<label asp-for="@Model.ConfirmPassword" class="form-label"></label>
					<input type="text" class="input-text" asp-for="@Model.ConfirmPassword" required />
					<span asp-validation-for="@Model.ConfirmPassword" style="color: red;"></span>
					<i class="fas fa-lock p-2" ></i>
				</div>

				<div class="form-row">
					<input type="submit" name="register" class="register btn-success" value="Change Password">
				</div>
				
			</form>
		</div>
	</div>
</section>

@section Scripts
	{
	@{
		Html.RenderPartial("_ValidationScriptsPartial");
	}
    ;
}
