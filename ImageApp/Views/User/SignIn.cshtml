@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@model ImageApp.BLL.Models.SignInVM;


<form class="col-7" asp-controller="User" asp-action="SignIn" >

    @if (@TempData["SuccessMsg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["SuccessMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


    @if (@TempData["ErrMsg"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @TempData["ErrMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert-danger" asp-validation-summary="@ValidationSummary.All"></div>

    <div class="mb-3">
        <label asp-for="@Model.UsernameOrEmail" class="form-label"></label>
        <input class="form-control" asp-for="@Model.UsernameOrEmail">
        <span asp-validation-for="@Model.UsernameOrEmail" class="alert-danger"></span>
    </div>
   

    <div class="mb-3">
        <label asp-for="@Model.Password" class="form-label"></label>
        <input type="password" class="form-control" asp-for="@Model.Password"></input>
        <span asp-validation-for="@Model.Password"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.RememberMe" class="form-label"></label>
        <input type="checkbox" asp-for="@Model.RememberMe"></input>
        <span asp-validation-for="@Model.RememberMe"></span>
    </div>

    <button type="submit" class="btn btn-primary">login</button>

</form>

@section Scripts
    {
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
    ;
}