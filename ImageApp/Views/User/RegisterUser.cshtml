@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@model ImageApp.BLL.Models.RegisterVM;


<form class="col-7" asp-controller="User" asp-action="SaveUser" enctype="multipart/form-data">

    @if (@ViewBag.ErrMsg != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @ViewBag.ErrMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert-danger" asp-validation-summary="@ValidationSummary.All"></div>

    <div class="mb-3">
        <label asp-for="@Model.Username" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Username">
        <span asp-validation-for="@Model.Username" class="alert-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Email" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Email"></input>
        <span asp-validation-for="@Model.Email"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Address" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Address"></input>
        <span asp-validation-for="@Model.Address"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.PhoneNumber" class="form-label"></label>
        <input class="form-control" asp-for="@Model.PhoneNumber"></input>
        <span asp-validation-for="@Model.PhoneNumber"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Password" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Password"></input>
        <span asp-validation-for="@Model.Password"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
        <input class="form-control" asp-for="@Model.ConfirmPassword"></input>
        <span asp-validation-for="@Model.ConfirmPassword"></span>
    </div>


    <button type="submit" class="btn btn-primary">Create</button>

</form>

@section Scripts
    {
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
    ;
}
